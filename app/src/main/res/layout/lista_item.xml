<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/vertical_margin"
    android:layout_marginLeft="@dimen/card_margin_horizontal"
    android:layout_marginRight="@dimen/card_margin_horizontal"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/card_end_padding"
            android:layout_marginStart="@dimen/horizontal_margin"
            android:layout_marginTop="@dimen/card_padding_top"
            android:text="Alimentari"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/card_subtitle_content" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_categoria"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:layout_marginEnd="@dimen/card_end_padding"
            android:layout_marginStart="@dimen/horizontal_margin"
            android:text="Latte"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/card_title" />

        <TextView
            android:id="@+id/tv_commento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_item_name"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:layout_marginEnd="@dimen/card_end_padding"
            android:layout_marginStart="@dimen/horizontal_margin"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque semper."
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/card_subtitle_content"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_commento"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:layout_marginEnd="@dimen/card_end_padding"
            android:layout_marginStart="@dimen/horizontal_margin"
            android:text="Nicola Â· oggi"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/card_subtitle_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/horizontal_margin"
            android:layout_marginTop="@dimen/card_counter_padding_top"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_plus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/primaryTextColor"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_item_count"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:textColor="@color/primaryTextColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_item_minus"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/primaryTextColor"
                android:textSize="24sp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>