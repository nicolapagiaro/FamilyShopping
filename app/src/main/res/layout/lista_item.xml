<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/vertical_margin"
    android:layout_marginLeft="@dimen/card_margin_horizontal"
    android:layout_marginRight="@dimen/card_margin_horizontal"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/card_end_padding"
            android:layout_marginStart="@dimen/horizontal_margin"
            android:layout_marginTop="@dimen/card_padding_top"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/card_subtitle_content" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/list_margin_top"
            android:layout_marginEnd="@dimen/card_end_padding"
            android:layout_marginStart="@dimen/horizontal_margin"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/card_title" />

        <TextView
            android:id="@+id/tv_commento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:layout_marginEnd="@dimen/card_end_padding"
            android:layout_marginStart="@dimen/horizontal_margin"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/card_subtitle_content"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/vertical_margin"
            android:layout_marginEnd="@dimen/card_end_padding"
            android:layout_marginStart="@dimen/horizontal_margin"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/card_subtitle_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>